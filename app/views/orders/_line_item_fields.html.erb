<div class="breadcrumb fields">
  <%= f.collection_select :product_id, Product.all, :id, :name, prompt: true %>
  <%= f.text_field :quantity, placeholder: "Quantity" %>
  <%= f.hidden_field :id %>
  <%= f.hidden_field :_destroy %>
  <%= link_to_function "Remove", "remove_fields(this)", class: "btn btn-small btn-danger" %>
</div>