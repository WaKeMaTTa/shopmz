<div class="breadcrumb">
  <div class="lineitems">
    <div class="lineitem">
      <%= f.collection_select :product_id, Product.all, :id, :name, prompt: true %>
      <%= f.text_field :quantity, placeholder: "Quantity" %>
      <%= f.text_field :price, placeholder: "Unit Price" %>
      <%= f.hidden_field :id %>
      <%= f.hidden_field :_destroy %>
      <%= link_to_function "Remove", "remove_line_item(this)", class: "btn btn-small btn-danger " %>
      <br><br>
    </div>
  </div>
  <%= link_to_function "Add Item", "add_line_item()", class: "btn btn-small btn-success" %>
</div>
