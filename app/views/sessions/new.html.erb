<div class="page-header">
  <h1>Log In</h1>
</div>

<%= form_for :login, :url => sessions_path, :html => { class: 'form-horizontal', method: 'POST' } do |f| %>

  <%= f.text_field :email %>

  <%= f.password_field :password %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>

<% end %>

